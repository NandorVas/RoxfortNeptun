<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RoxfortNeptun"
    xmlns:Views="clr-namespace:RoxfortNeptun.Views"
    x:Class="RoxfortNeptun.AppShell"
    Title="RoxfortNeptun">




    <TabBar>
            
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
            <ShellContent Title="ProfilPage"
                          ContentTemplate="{DataTemplate Views:ProfilPage}" 
                          Route="ProfilPage" />
            <ShellContent Title="SchedulePage"
                          ContentTemplate="{DataTemplate Views:SchedulePage}"
                          Route="SchedulePage" />
            <ShellContent Title="TaskPage" 
                          ContentTemplate="{DataTemplate Views:TaskPage}"
                          Route="TaskPage"/>
            
        <ShellContent Title="Log Off"
                      ContentTemplate="{DataTemplate local:MainPage}"
                      Route="MainPage" />
    </TabBar>


</Shell>
