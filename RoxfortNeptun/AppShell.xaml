<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RoxfortNeptun"
    xmlns:Views="clr-namespace:RoxfortNeptun.Views"
    x:Class="RoxfortNeptun.AppShell"
    Title="RoxfortNeptun">

    <!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />-->

    <ShellContent Title="Home"
                  ContentTemplate="{DataTemplate local:MainPage}"
                      Route="MainPage" />


    <TabBar>
        <Tab Title="ProfilPage">
            <ShellContent Title="ProfilPage"
                          ContentTemplate="{DataTemplate Views:ProfilPage}" 
                          Route="ProfilPage" />
        </Tab>
        <Tab Title="SchedulePage">
            <ShellContent Title="SchedulePage"
                          ContentTemplate="{DataTemplate Views:SchedulePage}"
                          Route="SchedulePage" />
        </Tab>
        <Tab Title="TaskPage">
            <ShellContent Title="TaskPage" 
                          ContentTemplate="{DataTemplate Views:TaskPage}"
                          Route="TaskPage"/>
        </Tab>
    </TabBar>



</Shell>
