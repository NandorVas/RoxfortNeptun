<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoxfortNeptun.Views.ProfilPage"
             Title="Profil">
    <VerticalStackLayout Padding="20" Spacing="8">
        <Label Text="Current student:" FontAttributes="Bold"/>
        <Label Text="{Binding CurrentStudent.Name}" FontSize="24"/>
        <Label Text="{Binding DatabaseInfo}" FontSize="12" TextColor="Gray"/>

        <Button Text="Log Out"
                Command="{Binding LogOutCommand}"
                IsVisible="True"/>
    </VerticalStackLayout>
</ContentPage>